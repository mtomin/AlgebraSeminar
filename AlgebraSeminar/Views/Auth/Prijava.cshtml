@model AlgebraSeminar.DTOs.ZaposlenikZaLogin
@{
    ViewBag.Title = "Prijava";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div>
        <form method="post" class="form-horizontal" style="padding-top: 20px">
            <div class="form-group">
                @Html.LabelFor(model => model.KorisnickoIme, "Korisnicko ime", new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.KorisnickoIme, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lozinka, new { @class = "control-label col-sm-2" })
                @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" value="Prijava" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <p>@ViewBag.ErrorMessage</p>
</body>
</html>
