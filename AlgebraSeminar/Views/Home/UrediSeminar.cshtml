@model AlgebraSeminar.Models.Seminar
@{
    ViewBag.Title = "Uredi seminar";
}

<h2>Uredi seminar @Model.Naziv (id: @Model.SeminarId)</h2>

<form class="form-horizontal" method="post" style="padding-top: 20px">
    @Html.HiddenFor(m => m.SeminarId)

    <div class="form-group">
        @Html.LabelFor(m => m.Naziv, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.Naziv)
        @Html.ValidationMessageFor(m => m.Naziv, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Opis, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.Opis)
        @Html.ValidationMessageFor(m => m.Opis, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Datum, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.Datum)
        @Html.ValidationMessageFor(m => m.Datum, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BrojSlobodnihMjesta, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.BrojSlobodnihMjesta)
        @Html.ValidationMessageFor(m => m.BrojSlobodnihMjesta, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Predavac, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.Predavac)
        @Html.ValidationMessageFor(m => m.Predavac, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-1">
            <input type="submit" value="Uredi seminar" class="btn btn-primary" />
        </div>
    </div>
</form>

<div class="btn btn-warning col-md-offset-2 ">
    @Html.ActionLink("Obriši seminar", "ObrisiSeminar", new { id = Model.SeminarId })
</div>