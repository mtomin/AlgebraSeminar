@model AlgebraSeminar.Models.Zaposlenik

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DodajNovogZaposlenika</title>
</head>
<body>
    <div>
        <form class="form-horizontal" method="post" style="padding-top: 20px">
            @Html.Hidden("LozinkaSalt", "_");
            
            <div class="form-group">
                @Html.LabelFor(model => model.Ime, new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.Ime, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezime, new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.KorisnickoIme, "Korisnicko ime", new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.KorisnickoIme, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lozinka, new { @class = "control-label col-sm-2" })
                @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" value="Kreiraj korisnika" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</body>
</html>
